body {
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f0f0f0;
}

#main-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80vw;
  height: 80vh;
  box-sizing: border-box;
}

#top-content {
  width: 100%;
  margin-bottom: 20px; /* Space between the top content and the posts container */
  display: flex;
  justify-content: center;
}

#post-form {
  display: flex;
  flex-direction: column;
  gap: 10px; /* Space between form elements */
  width: 100%;
  max-width: 600px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

label {
  margin-bottom: 5px;
  font-weight: bold;
}

input[type="text"], textarea {
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

textarea {
  resize: vertical;
  height: 100px;
}

button {
  padding: 10px;
  background-color: #9aa8b7;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
}

button:hover {
  background-color: #4c5864;
}

#posts-container {
  width: 100%;
  height: 100%;
  border: 2px solid #000;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  
  align-items: center;
  overflow-y: auto;  
}
